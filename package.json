{
  "private": true,
  "name": "roothub-codegen",
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "postbuild": "node ./scripts/site/spa-gh-pages.js",
    "deploy": "node ./scripts/site/gh-pages-publish.js",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/pro-layout": "^6.5.0",
    "ahooks": "^2.10.9",
    "codesandbox": "^2.2.3",
    "lodash": "^4.17.21",
    "react": "17.x",
    "react-dom": "17.x",
    "react-monaco-editor": "^0.44.0",
    "umi": "^3.5.20"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.178",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@umijs/plugin-qiankun": "^2.35.2",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.5.20",
    "fs-extra": "^10.0.0",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.0",
    "shelljs": "^0.8.4",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  }
}
